<Application x:Class="CYBERNUKE.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CYBERNUKE"
             xmlns:viewModel="clr-namespace:CYBERNUKE.MVVM.ViewModel" 
             xmlns:view="clr-namespace:CYBERNUKE.MVVM.View">
    <Application.Resources>

        <!-- DataTemplates for each ViewModel & View -->
        <DataTemplate DataType="{x:Type TypeName=viewModel:CombatViewModel}">
            <view:CombatView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:CutsceneViewModel}">
            <view:CutsceneView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:MainMenuViewModel}">
            <view:MainMenuView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:OverworldViewModel}">
            <view:OverworldView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:TownViewModel}">
            <view:TownView/>
        </DataTemplate>

        <!-- Font Resources -->
        <FontFamily x:Key="Unispace">./GameData/Fonts/Unispace.ttf#Unispace</FontFamily>

    </Application.Resources>
</Application>
